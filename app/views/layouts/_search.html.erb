<%= form_tag searches_path, :method => 'get' do %>

  <div>
    <%= text_field_tag :search, params[:search],
        placeholder: "Search...", class: "search-bar-only hide-for-small" %>

    <%= button_tag "Search", class: "search-button right inline-block
                                     collapse hide-for-small" %>
  </div>
<% end %>
