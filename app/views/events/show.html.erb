
<div class="row">
	<h4><%= @event.title %></h4>
	<h4 class="text-center">  <%= image_tag(@event.image_url,
				title: @event.title, size: "1000x1000") %>
				</h4>

	<% if @event.owner != current_user %>
	  <% if @event.users.include?(current_user) %>
	    <%= link_to "Leave Event", eventuser_path(id: @current_joined_user), method: :delete %>
	  <% else %>
	    <%= link_to "Join Event", eventusers_path(event_id: @event.id), method: :post %>
	  <% end %>
	<% end %>

	<h4> people going to <%= @event.title.capitalize %> </h4>
	<div class="event-description small-6-centered columns">
	  <li><%= link_to @event.owner.username, user_path(@event.owner) %></li>
	  <% if @event.users.present? %>
	    <% @event.users.each do |user| %>
	    <li> <%= link_to user.username, user_path(user) %> </li>
	    <% end %>
	  <% end %>
	</div>

	<div class="event-description small-6-centered columns"><%= @event.description %>
		<hr>
		<p><%= link_to "Add Comment", new_event_comment_path(@event), class: "add-comment" %></p>
    <% if @comments.present? %>
      <% @comments.each do |comment| %>
        <ul>
          <div class="row">
            <div class="columns small-6-centered">
              <li><%= comment.body.capitalize %></li>
              <li>Rating: <%= comment.rating %></li>
							<h4 class="text-center">  <%= image_tag(comment.image_url,
										title: @event.title, size: "1000x1000") %>
										</h4>
                <% if current_user.admin? || (@user == comment.user) %>
		              <li><%= link_to "Edit",
									        edit_event_comment_path(@event, comment) %> |
		                  <%= link_to "Delete",
											    event_comment_path(@event, comment),
													method: :delete %>
								 </li>
                <% end %>
								<hr>
            </div>
          </div>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
